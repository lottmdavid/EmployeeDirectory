@model EmployeeDirectory.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
        <dt>
            Employees
        </dt>
        @if (ViewData.ContainsKey("DepartmentEmployees"))
        {
            foreach (var employee in ViewData["DepartmentEmployees"] as IEnumerable<EmployeeDirectory.Models.Employee>)
            {
                {
                    <dd>
                        @employee.FirstName @employee.LastName
                    </dd>
                }
            }
        }
